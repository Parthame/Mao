// din ko saal me badalta hain or saal ko hafte me hafto ko dino me
    #include<iostream>
    using namespace std;
    
    int main()
    {
        int y,d,w;
        cout<<"Din dallana to:)";
        cin>>d;
        
        y = d/365;
        d = d%365;
        w = d/7;
        d = d%7;
        
        cout << "no. years:" << y << endl << "no. of weeks:" << w  << endl << "no. of days:" << d;
        
        return 0;
    }



// return opposite of that number
    int opposite (int number) {
        return -number;
    }


/* Avg and sum */
#include<iostream>
using namespace std;

int main()
{
    int a,b,c,avg,sum;
    cout << "enter the 3 no.";
    cin >> a;
    cin >> b;
    cin >> c;
    
    sum = a + b + c;
    avg = sum/3;
    
    cout << "sum is:" << sum <<endl << "avg is:" << avg;
    return 0;
}
